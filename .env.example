# Linera Mine - Frontend Configuration
# Copy this file to .env.local and fill in your values

# ====================
# LINERA BLOCKCHAIN
# ====================

# Set to 'true' to use Linera blockchain instead of mock data
VITE_USE_LINERA=true

# Your Linera chain ID (from 'linera wallet show')
VITE_LINERA_CHAIN_ID=your_chain_id_here

# Your deployed application ID (from 'linera publish-and-create')
VITE_LINERA_APP_ID=your_app_id_here

# Linera service port (default: 8080 for local, 9001 for Docker)
VITE_LINERA_PORT=8080

# Full GraphQL endpoint URL (optional - auto-constructed if not set)
# VITE_LINERA_GRAPHQL_URL=http://localhost:8080/chains/{chain_id}/applications/{app_id}

# Wallet owner address (from 'linera wallet show')
VITE_LINERA_WALLET_OWNER=0x...
